{
  "kind": "collectionType",
  "collectionName": "activities",
  "info": {
    "singularName": "activity",
    "pluralName": "activities",
    "displayName": "Activity",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "minLength": 1,
      "required": true
    },
    "deadline": {
      "type": "datetime",
      "required": true
    },
    "ponderation": {
      "type": "integer",
      "min": 0,
      "max": 100
    },
    "file": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "videos",
        "audios",
        "files"
      ]
    },
    "description": {
      "type": "richtext",
      "minLength": 1
    },
    "evaluable": {
      "type": "boolean"
    },
    "qualifications": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::qualification.qualification",
      "mappedBy": "activity"
    },
    "evaluators": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::users-permissions.user",
      "mappedBy": "activities"
    },
    "categories": {
      "type": "customField",
      "options": [
        "Team Work",
        "List Comprehension",
        "Mark",
        "Homework",
        "Project",
        "Exam",
        "Quiz"
      ],
      "customField": "plugin::multi-select.multi-select"
    },
    "PeerReviewRubrica": {
      "type": "json"
    },
    "section": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::section.section",
      "mappedBy": "activity"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "peerReview",
        "task",
        "forum",
        "questionnaire"
      ]
    },
    "task_to_reviews": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::activity.activity"
    },
    "usersToPair": {
      "type": "integer",
      "default": 1,
      "required": true,
      "min": 1
    }
  }
}
